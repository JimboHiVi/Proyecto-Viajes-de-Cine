<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Editar ciudad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://kit.fontawesome.com/a80e1d56f1.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('navbar') %>
    <main class="container-fluid">
      <section class="row sctform">
        <div class="col-12 d-flex justify-content-center align-items-center">
          <div class="contform">
            <form class="formulario d-flex flex-column gap-2"
            action="/city/editCity/<%= result[0].destination_id %>"
            method="post"
            enctype="multipart/form-data">    
            <h2>Editar ciudad</h2>    
        <input type="text"          
              name="city"
              value="<%= result[0].city %>"/>    
        <input type="text"          
              name="country"
              value="<%= result[0].country %>"/>    
        <input type="text"          
              name="info"destination
              value="<%= result[0].info %>"/>
        <input type="file"          
              name="img"/>
        <img src="/images/cities/<%= result[0].city_img %>" alt="">
        <button type="submit" class="btn css-button-arrow--red">Editar</button>    
        <h5 class="text-danger"><%= typeof message != 'undefined' ? message : null %></h5>
      </form>
          </div>
        </div>
          

          
        
      </section>


    </main>


    <%- include('footer') %>