<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Todos los destinos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://kit.fontawesome.com/a80e1d56f1.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('navbar') %>   

    <main class="container-fluid">

      <section class="row sct1">
        <div class="col-12 text-center rotulo">
          <p>(Todas las ciudades)</p>
        </div>        
      <% result.forEach( city  => { %>
        <div class="col d-flex justify-content-center align-items-center mb-5">
          <div class="card" style="width: 18rem;">
            <img src="/images/cities/<%= city.city_img %>" class="card-img-top" alt="..." height="150px">
            <div class="card-body">
              <h4 class="card-title"><%= city.city %></h4>
              <h5><%= city.country %></h5>
              <!-- <p class="card-text"><%= city.info %></p> -->
              <a href="/city/oneCity/<%= city.destination_id %>" class="btn css-button-3d--sky">Mas info</a>
            </div>
          </div>
        </div>
      <% }) %>
        
      </section>


    </main>



    <%- include('footer') %>